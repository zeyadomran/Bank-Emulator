<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <AnchorPane styleClass="mainBody" stylesheets="@../resources/css/style.css">
      <children>
         <Pane styleClass="header">
            <children>
               <Label layoutX="360.0" layoutY="10.0" styleClass="logoWhite" />
            </children></Pane>
         <Pane layoutX="200.0" layoutY="200.0" styleClass="loginContainer">
            <children>
               <TextField fx:id="userLogin" layoutX="50.0" layoutY="40.0" promptText="Username:" styleClass="inputField" />
               <PasswordField fx:id="passLogin" layoutX="50.0" layoutY="140.0" promptText="Password:" styleClass="inputField" />
               <Button defaultButton="true" layoutX="50.0" layoutY="220.0" mnemonicParsing="false" onAction="#login" text="Login">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn1" />
                  </styleClass>
               </Button>
               <Button layoutX="225.0" layoutY="220.0" mnemonicParsing="false" onAction="#signUpScene" text="Sign Up">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn2" />
                  </styleClass>
               </Button>
            </children>
         </Pane>
      </children></AnchorPane>
</Scene>
