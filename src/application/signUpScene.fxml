<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <AnchorPane prefHeight="200" prefWidth="200" styleClass="mainBody" stylesheets="@../resources/css/style.css">
      <children>
         <Pane prefHeight="200.0" prefWidth="200.0" styleClass="header">
            <children>
               <Label layoutX="360.0" layoutY="10.0" styleClass="logoWhite" />
            </children>
         </Pane>
         <Pane layoutX="25.0" layoutY="190.0" prefHeight="200.0" prefWidth="200.0" styleClass="signUpContainer">
            <children>
               <TextField fx:id="userSignUp" layoutX="50.0" layoutY="40.0" promptText="Username:" styleClass="inputField" />
               <TextField fx:id="nameSignUp" layoutX="400.0" layoutY="40.0" promptText="Name:" styleClass="inputField" />
               <PasswordField fx:id="passSignUp" layoutX="50.0" layoutY="130.0" promptText="Password:" styleClass="inputField" />
               <PasswordField fx:id="cPassSignUp" layoutX="400.0" layoutY="130.0" promptText="Confirm Password:" styleClass="inputField" />
               <Button defaultButton="true" layoutX="225.0" layoutY="220.0" mnemonicParsing="false" onAction="#createAccount" text="Sign Up">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn1" />
                  </styleClass>
               </Button>
               <Button layoutX="400.0" layoutY="220.0" mnemonicParsing="false" onAction="#loginScene" text="Go Back">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn2" />
                  </styleClass>
               </Button>
            </children></Pane>
      </children></AnchorPane>
</Scene>
